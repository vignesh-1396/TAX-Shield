# .env.example - Backend Configuration Template

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/itc_shield

# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your_secret_key_here_generate_with_openssl_rand_hex_32

# ============================================
# GSP API CONFIGURATION
# ============================================
# Mode: "mock" or "sandbox"
GSP_MODE=sandbox
SANDBOX_CLIENT_ID=key_live_your_client_id
SANDBOX_SECRET=secret_live_your_secret

# ============================================
# JWT SECURITY (REQUIRED - NO DEFAULT!)
# ============================================
# Generate a strong secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# CRITICAL: This MUST be set before running in production!
JWT_SECRET_KEY=your_super_secret_jwt_key_here_minimum_32_characters

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/itc_shield

# SQLite (Development - default if not set)
# DATABASE_URL=

# Database Connection Pool Settings
DB_POOL_MIN_CONN=5
DB_POOL_MAX_CONN=50
DB_CONNECT_TIMEOUT=10
DB_STATEMENT_TIMEOUT=30000

# ============================================
# REDIS CACHE (OPTIONAL - for performance)
# ============================================
# If not set, caching will be disabled
# Local: redis://localhost:6379/0
# Production: redis://your-redis-host:6379/0
REDIS_URL=redis://localhost:6379/0

# ============================================
# CELERY CONFIGURATION (for async processing)
# ============================================
# Use same Redis or separate instance
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Local storage (default - FREE)
USE_S3=false
BATCH_OUTPUT_DIR=./batch_outputs

# S3 storage (optional - for production)
# USE_S3=true
# S3_BUCKET=itc-shield-batches
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_REGION=ap-south-1
