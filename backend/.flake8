[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    migrations,
    .pytest_cache

[isort]
profile = black
line_length = 120
skip = venv,.venv,migrations

[tool:black]
line-length = 120
target-version = ['py312']
include = '\.pyi?$'
extend-exclude = '''
/(
  | venv
  | .venv
  | migrations
)/
'''
